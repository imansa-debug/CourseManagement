@model List<DataLayer.Article>
    @{ 
        List<DataLayer.ArticleGroupRelation> articleGroupRelations = ViewBag.ArticleGroup;
    }


<div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card card-blog">
                    <div class="card-img">
                        <a href="/article/articlepage">
                            <img sizes="200" src="/Images/Thumb/@item.Image" alt="" class="img-fluid">
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="card-category-box">
                            <div class="card-category">
                                <h6 class="category">@articleGroupRelations.FirstOrDefault(p=>p.ArticleID==item.ID).ArticleGroups.GroupName</h6>
                            </div>
                        </div>
                        <h3 class="card-title">
                            <a href="blog-single.html">@item.Name</a>
                        </h3>
                        <p class="card-description">
                       @item.Description
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="post-author">
                            <a href="#">
                                <img src="/Content/img/testimonial-2.jpg" alt="" class="avatar rounded-circle">
                                <span class="author">@item.Author</span>
                            </a>
                        </div>
                        <div class="post-date">
                            <span class="ion-ios-clock-outline"></span> 10 دقیقه
                        </div>
                    </div>
                </div>
            </div>
        }

      
    </div>